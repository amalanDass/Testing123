<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
                <ImageView
                    android:id="@+id/img_news_top"
                    android:layout_width="fill_parent"
                    android:layout_height="120dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop" />

                
                
                <RelativeLayout
                    android:id="@+id/rel_txt_news"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/rel_img_news"
                    android:background="@drawable/widget_title_bg" >

                    <TextView
                        android:id="@+id/txt_news_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txt_ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_news_heading"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:visibility="gone" />
                </RelativeLayout>

                
                
                <LinearLayout
                    android:id="@+id/side"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dn_dashboard_titlebox"
                    android:padding="3dip" >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="Metro View"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

</RelativeLayout>