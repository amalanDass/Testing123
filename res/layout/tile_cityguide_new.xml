<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_addmore"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dn_dashboard_cityguide" >

    <LinearLayout
        android:id="@+id/side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dn_dashboard_titlebox"
        android:padding="4dip" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="City Guide"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/centertxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textSize="24sp" />

        <include 
            layout="@layout/tile_layer_online"
            android:id="@+id/layer_online"
            />

</RelativeLayout>